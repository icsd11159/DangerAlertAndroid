<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thank_you"
            android:layout_below="@+id/spinner"
            android:textSize="25sp"/>



    <TextView
        android:id="@+id/Login"
        android:layout_width="122dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/spinner"
        android:text="Welcome!"
        android:textColor="#7C0606"
        android:textSize="24sp"
        android:visibility="visible"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter"
        android:width="300dp"
        android:onClick="loginButtonClicked"
        android:text="Log In"
        android:textColor="#7A0D0D" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin"
        android:layout_marginTop="25dp"
        android:text="Or if you have already Sign in.."
        android:textColor="#512E2E"
        android:textStyle="bold|italic" />
    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/or"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/logmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginTop="5dp"
        android:text="Please Enter your Email"
        android:textColor="#3D9886" />
    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/logmail"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:text="Please Enter your Password"

        android:textColor="#3D9886" />


    <TextView
        android:id="@+id/wronglogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="8dp"
        android:text=""

        />

    <EditText
        android:id="@+id/SignIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_below="@+id/Login"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="textEmailAddress"/>

    <TextView
        android:id="@+id/entrmailp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SignIN"
        android:layout_marginTop="5dp"
        android:text="Please Enter your Email"
        android:textColor="#3D9886" />
    <EditText
        android:id="@+id/passwordsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/entrmailp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/entersign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordsign"
        android:layout_marginTop="5dp"
        android:text="Please Enter your Password"

        android:textColor="#3D9886" />

    <Button
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entersign"
        android:width="300dp"
        android:onClick="signinButton"
        android:text="Sign In"
        android:textColor="#7A0D0D"
        android:textColorHint="#4DBFA3" />
</RelativeLayout>